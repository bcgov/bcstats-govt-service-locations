// To run these tasks from vscode:
// 1. Open the Command Palette
// 2. Search for and select "Tasks: Run Task"
// 3. Select the desired task name (i.e. "R: Convert %>% to |>")

  {
        "version": "2.0.0",
        "tasks": [
            {
            // run this task to convert all instances of magritter pipe to base R pipe. 
            // runs on the file currently open in the editor
                "label": "R: Convert %>% to |>",
                "type": "shell",
                "command": "sed -i.bak 's/%>%/|>/g' \"${file}\"",
                "group": "build",
                "presentation": {
                  "reveal": "always",
                  "panel": "new"
                }
              }
        ]
    }